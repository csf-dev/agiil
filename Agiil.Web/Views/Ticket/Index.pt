<html lang="en" metal:use-macro="Views/Shared/StandardPage/macros/page">
<head>
<title metal:fill-slot="title_element">Ticket detail</title>
</head>
<body>
<div metal:fill-slot="page_content" class="page_content">
  <h1 tal:content="here/Ticket/Title">Ticket title</h1>
  <p>
    Created by <strong tal:content="here/Ticket/Creator">username</strong>
    on <strong tal:content="here/Ticket/CreationTimestamp">2001-01-01 19:21:22</strong>.
  </p>
  <h2>Description</h2>
  <div tal:content="here/Ticket/Description" class="ticket_description">
    Ticket description here.
  </div>
  <a href="Ticket/Edit/0"
     tal:define="editUrl string:Ticket/Edit/${here/Ticket/Id}"
     tal:attributes="href editUrl">Edit this ticket</a>
</div>
</body>
</html>